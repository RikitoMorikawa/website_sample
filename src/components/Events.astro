---
const events = [
  {
    id: "wine-tasting",
    date: "2024.04.20",
    title: "ワインテイスティング & ネットワーキング",
    description: "ソムリエを招いてのプレミアムワインテイスティングと、各界プロフェッショナルとの交流会",
    image: "https://images.unsplash.com/photo-1510812431401-41d2bd2722f3?auto=format&fit=crop&w=800",
    category: "Social"
  },
  {
    id: "mindfulness",
    date: "2024.04.25",
    title: "マインドフルネス瞑想セッション",
    description: "心身の調和を整える、プロフェッショナルによるガイド付き瞑想セッション",
    image: "https://images.unsplash.com/photo-1506126613408-eca07ce68773?auto=format&fit=crop&w=800",
    category: "Wellness"
  },
  {
    id: "morning-seminar",
    date: "2024.05.01",
    title: "エグゼクティブ朝活セミナー",
    description: "ビジネスリーダーによる成功哲学と朝活習慣についての特別セッション",
    image: "https://images.unsplash.com/photo-1515169067868-5387ec356754?auto=format&fit=crop&w=800",
    category: "Business"
  }
];
---

<section id="events" class="py-12 md:py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-3 md:mb-4">イベント</h2>
    <p class="text-center text-gray-600 mb-8 md:mb-12">コミュニティメンバーのための特別なイベントをご用意</p>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {events.map((event) => (
        <article class="bg-white rounded-xl shadow-lg overflow-hidden group">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={event.image} 
              alt={event.title} 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <span class="absolute top-4 right-4 bg-white/90 px-3 py-1 rounded-full text-sm font-medium text-fuchi-600">
              {event.category}
            </span>
          </div>
          <div class="p-4 md:p-6">
            <time class="text-sm text-fuchi-500 font-medium">{event.date}</time>
            <h3 class="text-lg md:text-xl font-bold mt-2 mb-2 md:mb-3 text-gray-800">
              {event.title}
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed mb-4">{event.description}</p>
            <div class="flex flex-col sm:flex-row gap-3 sm:justify-between sm:items-center">
              <a 
                href={`/events/${event.id}`}
                class="text-fuchi-600 hover:text-fuchi-700 transition-colors inline-flex items-center justify-center"
              >
                イベント詳細
                <svg class="w-4 h-4 ml-1" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
              <button 
                class="bg-fuchi-600 text-white px-4 py-2 rounded-lg hover:bg-fuchi-700 transition-colors text-sm text-center"
              >
                申し込む
              </button>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>